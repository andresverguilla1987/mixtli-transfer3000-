# Backend .env sample
NODE_ENV=production
PORT=10000
DATABASE_URL=postgres://user:pass@host:5432/db
JWT_SECRET=supersecret

ALLOWED_ORIGINS=["http://localhost:8888","https://YOUR-NETLIFY-SITE.netlify.app"]

# Twilio (SMS)
TWILIO_ACCOUNT_SID=ACxxxx
TWILIO_AUTH_TOKEN=xxxx
TWILIO_FROM=+1xxxxxxxxxx

# R2 / S3
S3_ENDPOINT=https://ACCOUNT_ID.r2.cloudflarestorage.com
S3_BUCKET=mixtlitransfer
S3_REGION=auto
S3_ACCESS_KEY_ID=xxxxx
S3_SECRET_ACCESS_KEY=xxxxx
S3_FORCE_PATH_STYLE=true

# Public base (opcional CDN)
PUBLIC_BASE_URL=

# ZIP abs (bypass Netlify)
BACKEND_PUBLIC_ORIGIN=https://your-backend.onrender.com

# Diag (opcional)
CONFIG_DIAG_TOKEN=diag-token-123

# Planes/LÃ­mites
FREE_MAX_TOTAL_MB=200
FREE_MAX_DOWNLOADS=50
PRO_MAX_TOTAL_MB=20480
PRO_MAX_DOWNLOADS=1000

# Password paquetes
PACKAGE_PASSWORD_MINLEN=4

# Rate-limit descargas por IP
DL_RATE_WINDOW_S=60
DL_RATE_MAX=60
