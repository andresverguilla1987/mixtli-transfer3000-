
# --- Render / Backend env ---
PORT=10000
NODE_ENV=production

# R2
S3_ENDPOINT= https://<your-account-id>.r2.cloudflarestorage.com
S3_REGION=auto
S3_BUCKET=mixtlitransfer3000
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_FORCE_PATH_STYLE=true

# Database
DATABASE_URL=postgres://user:pass@host:5432/mixtli

# Plans
# FREE: 3 or 30 days selectable; file cap 3.5GB
FREE_MAX_UPLOAD_MB=3584
FREE_LINK_TTL_DEFAULT_DAYS=3
FREE_LINK_TTL_MAX_DAYS=30

# PRO: 400GB rolling / 30d, unlimited links until GB runs out, links live 7d
PRO_MAX_PERIOD_GB=400
PRO_PERIOD_DAYS=30
PRO_LINK_TTL_DAYS=7
PRO_MAX_UPLOAD_MB=40960  # optional per-file cap; set big or leave unset

# PROMAX: “like WeTransfer” but 22d link life
PROMAX_PERIOD_DAYS=30
PROMAX_LINK_TTL_DAYS=22
PROMAX_MAX_UPLOAD_MB=204800  # optional per-file cap

# Auth (JWT/OTP)
JWT_SECRET=change_me
OTP_SENDER=email # or sms
