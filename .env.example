# ---- REQUIRED ----
NODE_ENV=production
PORT=10000
JWT_SECRET=super_secret_change_me
DATABASE_URL=postgres://user:pass@host:5432/dbname

# CORS
ALLOWED_ORIGINS=["https://your-netlify.site","http://localhost:5173"]
BACKEND_PUBLIC_ORIGIN=https://your-backend.onrender.com

# R2/S3
S3_ENDPOINT=https://<account>.r2.cloudflarestorage.com
S3_BUCKET=mixtlitransfer
S3_REGION=auto
S3_ACCESS_KEY_ID=XXXX
S3_SECRET_ACCESS_KEY=YYYY
S3_FORCE_PATH_STYLE=true
PUBLIC_BASE_URL=

# Email (choose one)
# --- SendGrid
SENDGRID_API_KEY=
SENDGRID_FROM=you@example.com
# --- OR SMTP
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=you@example.com

# SMS (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM=+1xxxxxxxxxx

# App options
FORCE_RELATIVE_URLS=true
CONTENT_DISPOSITION=
CONFIG_DIAG_TOKEN=diag-123

# Plan limits
FREE_MAX_TOTAL_MB=200
FREE_MAX_DOWNLOADS=50
PRO_MAX_TOTAL_MB=20480
PRO_MAX_DOWNLOADS=1000
PROMAX_MAX_TOTAL_MB=102400
PROMAX_MAX_DOWNLOADS=2000

PACKAGE_PASSWORD_MINLEN=4
DL_RATE_WINDOW_S=60
DL_RATE_MAX=60
ALLOW_DEMO_OTP=false
