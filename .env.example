# Render .env for Mixtli Transfer MAX
NODE_ENV=production
PORT=10000

# Postgres
DATABASE_URL=postgres://USER:PASSWORD@HOST:5432/DBNAME

# JWT
JWT_SECRET=change_me_super_secret

# CORS (JSON array)
ALLOWED_ORIGINS=["https://YOUR_NETLIFY.app"]

# Twilio (SMS-only)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_FROM=+1xxxxxxxxxx

# S3/R2 (Cloudflare R2)
S3_ENDPOINT=https://ACCOUNT_ID.r2.cloudflarestorage.com
S3_BUCKET=mixtlitransfer
S3_REGION=auto
S3_ACCESS_KEY_ID=xxxx
S3_SECRET_ACCESS_KEY=xxxx
S3_FORCE_PATH_STYLE=true

# Optional public base for direct object links (leave empty to use endpoint/bucket style)
PUBLIC_BASE_URL=

# Force relative share URLs
FORCE_RELATIVE_URLS=true

# Content-Disposition for uploaded objects (empty = let browser decide; or 'attachment')
CONTENT_DISPOSITION=

# Diag token
CONFIG_DIAG_TOKEN=

# Backend public origin (Render service URL, no trailing slash)
BACKEND_PUBLIC_ORIGIN=https://YOUR-RENDER.onrender.com

# Plan limits
FREE_MAX_TOTAL_MB=200
FREE_MAX_DOWNLOADS=50
PRO_MAX_TOTAL_MB=20480
PRO_MAX_DOWNLOADS=1000

# Password minimum length
PACKAGE_PASSWORD_MINLEN=4

# Download IP rate limiting window (seconds) and max
DL_RATE_WINDOW_S=60
DL_RATE_MAX=60
